{
  "name": "@gregrickaby/acf-blocks",
  "private": true,
  "version": "1.0.0",
  "description": "Custom ACF Blocks for WordPress",
  "author": "Greg Rickaby <greg@gregrickaby.com>",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "acf",
    "blocks"
  ],
  "main": "build/index.js",
  "dependencies": {
    "@fancyapps/ui": "^4.0.31"
  },
  "devDependencies": {
    "@wordpress/scripts": "^26.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "wp-scripts build",
    "dev": "npm run start",
    "format": "wp-scripts format",
    "lint": "run-p lint:css lint:js lint:tsc lint:pkg-json lint:php",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:php": "composer run lint",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "composer install && npm run build",
    "start": "rimraf build && wp-scripts start"
  }
}
