  "acf": {
    "blockVersion": 2,
    "mode": "auto",
    "renderTemplate": "../../plugins/grd-acf-blocks/src/blocks/gallery/gallery.php",
    "postTypes": ["post"]
  },
  "supports": {
    "anchor": true
  }
}
